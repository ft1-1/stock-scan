[run]
source = src
omit = 
    */tests/*
    */test_*
    */__init__.py
    */conftest.py
    */setup.py
    */venv/*
    */.venv/*
    */env/*
    */node_modules/*

branch = True
parallel = True

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

ignore_errors = True
show_missing = True
precision = 2

[html]
directory = htmlcov
title = Options Screening System Coverage Report

[xml]
output = coverage.xml
# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Environment
SCREENER_ENVIRONMENT=development
SCREENER_DEBUG=true
SCREENER_LOG_LEVEL=INFO
SCREENER_VERBOSE=true

# API Keys (Required)
SCREENER_EODHD_API_KEY=your_eodhd_api_key_here
SCREENER_MARKETDATA_API_KEY=your_marketdata_api_key_here
SCREENER_CLAUDE_API_KEY=your_claude_api_key_here

# API Base URLs (Optional - defaults provided)
SCREENER_EODHD_BASE_URL=https://eodhd.com/api
SCREENER_MARKETDATA_BASE_URL=https://api.marketdata.app/v1
SCREENER_CLAUDE_BASE_URL=https://api.anthropic.com

# Screening Parameters
SCREENER_MAX_STOCKS_TO_SCREEN=5000
SCREENER_MIN_MARKET_CAP=50000000
SCREENER_MAX_MARKET_CAP=500000000000
SCREENER_MIN_STOCK_PRICE=5.0
SCREENER_MAX_STOCK_PRICE=1000.0
SCREENER_MIN_DAILY_VOLUME=100000

# Technical Analysis Parameters
SCREENER_RSI_OVERSOLD_THRESHOLD=30.0
SCREENER_RSI_OVERBOUGHT_THRESHOLD=70.0
SCREENER_BOLLINGER_PERIOD=20
SCREENER_BOLLINGER_STD_DEV=2.0

# Stock Quality Filters (replaces options filtering)
SCREENER_MAX_ACCEPTABLE_VOLATILITY=0.08
SCREENER_MIN_AVG_DAILY_DOLLAR_VOLUME=10000000
SCREENER_MAX_BETA=3.0
SCREENER_MIN_DIVIDEND_YIELD=0.0
SCREENER_MAX_BID_ASK_SPREAD_PCT=0.5
SCREENER_MAX_SHORT_INTEREST_PCT=25.0
SCREENER_MIN_INSTITUTIONAL_OWNERSHIP_PCT=0.0

# AI Configuration
SCREENER_CLAUDE_MODEL=claude-3-5-sonnet-20241022
SCREENER_CLAUDE_MAX_TOKENS=4000
SCREENER_CLAUDE_TEMPERATURE=0.1
SCREENER_CLAUDE_DAILY_COST_LIMIT=50.0
SCREENER_CLAUDE_REQUEST_TIMEOUT=60

# Performance Settings
SCREENER_MAX_CONCURRENT_REQUESTS=50
SCREENER_REQUEST_TIMEOUT=30
SCREENER_MAX_RETRIES=3
SCREENER_RETRY_BACKOFF_FACTOR=2.0

# Caching Configuration
SCREENER_ENABLE_CACHING=true
SCREENER_CACHE_TTL=3600
SCREENER_MAX_CACHE_SIZE_MB=500

# Rate Limiting (requests per minute)
SCREENER_EODHD_REQUESTS_PER_MINUTE=1000
SCREENER_MARKETDATA_REQUESTS_PER_MINUTE=100
SCREENER_CLAUDE_REQUESTS_PER_MINUTE=50

# Output Configuration
SCREENER_OUTPUT_DIRECTORY=data/output
SCREENER_LOG_DIRECTORY=logs
SCREENER_CACHE_DIRECTORY=data/cache
SCREENER_EXPORT_FORMATS=["json","csv"]

# Quality Settings
SCREENER_MIN_DATA_QUALITY_SCORE=80.0
SCREENER_REQUIRE_FUNDAMENTAL_DATA=true
SCREENER_REQUIRE_TECHNICAL_DATA=true

# Monitoring and Alerting
SCREENER_ENABLE_MONITORING=true
SCREENER_METRICS_COLLECTION_INTERVAL=60
SCREENER_HEALTH_CHECK_INTERVAL=300

# Security Settings
SCREENER_ENCRYPT_CACHE=false
SCREENER_API_KEY_ROTATION_DAYS=90

# Workflow Settings
SCREENER_ENABLE_CHECKPOINTING=true
SCREENER_CHECKPOINT_INTERVAL=100
SCREENER_MAX_WORKFLOW_DURATION_HOURS=4

# Exclusion Lists (comma-separated)
SCREENER_EXCLUDED_SECTORS=Utilities,Real Estate
SCREENER_EXCLUDED_SYMBOLS=

# Specific Symbol Screening (comma-separated)
# When set, this overrides general screening and only screens these symbols
# Example: SCREENER_SPECIFIC_SYMBOLS=AAPL,MSFT,GOOGL,TSLA
SCREENER_SPECIFIC_SYMBOLS=

# Testing Configuration
SCREENER_TEST_MODE=false
SCREENER_TEST_SYMBOL_LIMIT=10